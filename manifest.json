{
  "manifest_version": 2,
  "name": "Rabet",
  "version": "1.1.0",
  "description": "Rabet extension, a simple way to interact with Stellar network.",
  "homepage_url": "https://rabet.io",
  "icons": {
    "16": "assets/16x16.png",
    "32": "assets/32x32.png",
    "48": "assets/48x48.png",
    "128": "assets/128x128.png"
  },
  "browser_action": {
    "default_title": "Rabet",
    "default_icon": "assets/128x128.png",
    "default_popup": "popup/index.html"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background/content_script.js"],
      "match_about_blank": true,
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["background/*.*", "interaction/*.*"],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  }
}
